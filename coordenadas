import pyautogui
import time

time.sleep(5) 

while True:
    x, y = pyautogui.position()
    print(f"Posição do Mouse: x={x} y={y}")
    time.sleep(1)  
    
    
    # esse modulo vai auxiliar a quem utilizar esse codigo a identificar a coordenada correta da tela a qual ele quer rastrear a coloração.
